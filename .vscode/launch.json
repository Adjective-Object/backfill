  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/sample",
      "name": "Launch sample with yarn",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["prepare"],
      "port": 9229
    },
    {
      "name": "Debug Backfill Jest Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/backfill",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--coverage",
        "false"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
